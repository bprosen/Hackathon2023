<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:context=".TxnCard">

    <androidx.cardview.widget.CardView

        android:id="@+id/txn_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp">

        <LinearLayout

            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:inputType="number"
                android:id="@+id/money_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount: "
                android:textStyle="bold">

            </TextView>
            <TextView
                android:id="@+id/txn_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/money_amount"
                android:hint="Transaction Type: "
                android:textStyle="bold"
                >

            </TextView>
            <TextView

                android:id="@+id/txn_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txn_type"
                android:hint="Date: "
                android:inputType="date"
                android:textStyle="bold"
                >

            </TextView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>